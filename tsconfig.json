{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "types": [ "node" ],
    "typeRoots": ["node_modules/@types", "@types"],
    "allowJs": true
  },
  "include": ["src/**/*.ts", "config.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "lib": ["es2015"]
}